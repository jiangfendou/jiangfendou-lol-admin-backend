<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiangfendou.loladmin.mapper.SysRoleMenuMapper">

    <delete id="deleteRoleMenuBatch">
        UPDATE
            sys_role_menu
        SET is_deleted = 1
        <where>
            role_id IN
            <foreach collection="deleteRoleIds" item="roleId" index="index" open="(" close=")" separator=",">
                #{roleId}
            </foreach>
        </where>

    </delete>
</mapper>
